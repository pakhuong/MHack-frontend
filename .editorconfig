# EditorConfig helps maintain consistent coding styles: https://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2
max_line_length = 80

# Preserve two-space Markdown line breaks
[*.md]
trim_trailing_whitespace = false

# YAML explicit (matches project conventions)
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Makefiles require tabs
[Makefile]
indent_style = tab
